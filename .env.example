# Настройки сервера
PORT=3000
NODE_ENV=development

# Настройки базы данных PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aironlab_blog
DB_USER=postgres
DB_PASSWORD=your_password_here

# Настройки SMTP для отправки email
# Для Gmail используйте App Password вместо обычного пароля
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Email администратора для получения заявок
ADMIN_EMAIL=admin@example.com

# Отправлять ли подтверждение отправителю (true/false)
SEND_CONFIRMATION=true

# Настройки CORS (необязательно)
# CORS_ORIGIN=http://localhost:3001

# Настройки безопасности
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# Настройки для загрузки файлов (будущее расширение)
# UPLOAD_DIR=./uploads
# MAX_FILE_SIZE=5242880

# API ключи для интеграций (будущее расширение)
# OPENAI_API_KEY=your_openai_key_here
# ANALYTICS_KEY=your_analytics_key_here
